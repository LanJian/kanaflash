body
  font 18px "Lucida Grande", Helvetica, Arial, sans-serif
  color #444444
  background-color #f1f0ff

a, a:visited
  color #00B7FF

border-radius()
 -webkit-border-radius arguments
 -moz-border-radius arguments
 border-radius arguments

rounded-top()
 -webkit-border-top-left-radius arguments
 -webkit-border-top-right-radius arguments
 -moz-border-radius-topleft arguments
 -moz-border-radius-topright arguments
 border-top-left-radius arguments
 border-top-right-radius arguments

rounded-bottom()
 -webkit-border-bottom-left-radius arguments
 -webkit-border-bottom-right-radius arguments
 -moz-border-radius-bottomleft arguments
 -moz-border-radius-bottomright arguments
 border-bottom-left-radius arguments
 border-bottom-right-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

no-select()
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;


#top_banner
  z-index: -1000
  position absolute
  top 0
  left 0
  width 100%

$banner-height = 60px
#top_banner, header
  height $banner-height

header
  position relative
  padding 20px 20px
  color #ff6f20
  h1
    line-height $banner-height
    font-size $banner-height
  nav
    display inline-block
    position absolute
    top 20px 
    right 20px
    a, a:visited
      color #444444
      text-decoration none
      padding 5px 10px
      margin 5px
      line-height $banner-height
      border-radius 5px
    a:hover
      color #ff6f20
      background-color #dfe6f0

$radius = 10px
#main
  width 710px
  margin 0 auto
  margin-top 40px
  padding 0 5px
  background-color #ccdcf0
  border-radius $radius 
  box-shadow 5px 5px 10px #a3b29f

.center
  text-align center

a.large-button
  border-radius 10px
  color #FFFFFF
  background-color #0ADB0D
  text-decoration none
  padding 15px 30px
  font-size 40px
  font-weight bold
  display inline-block
  text-align center
  margin 20px 0

#content
  padding 25px

#practice
  width 300px
  height 300px
  margin 10px auto
  text-align center
  p.kana
    font-size (200px/2)
    line-height 200px
  input[type=text]
    width 150px

#textframe
  margin 0px auto
  width 160px
  padding 5px 5px
  border-radius 5px

.correct
  background-color #5aff3d

.incorrect
  background-color #FF0000

.prompt
  color #B0B0B0
  text-decoration italic

ul#kana_select.horizontal
  text-align center
  li
    display inline

.select-button
  border-radius 5px
  text-decoration none
  padding 5px 7px
  font-size 20px
  font-weight bold
  display inline-block
  text-align center
  margin 5px 5px
  cursor pointer
  no-select 1

.select-button.selected
  background-color #0ADB0D
  color #FFFFFF

.select-button.unselected
  background-color #666666
  color #FFFFFF

.no-select
  no-select 1
